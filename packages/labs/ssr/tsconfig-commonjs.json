{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019", "ES2020.String"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./commonjs",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "custom_typings/*.d.ts"
  ],
  "exclude": [
    "src/lib/module/",
    "src/demo/",
    "src/test/"
  ]
}
